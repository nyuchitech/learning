---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Users, MessageSquare, GitPullRequest, Bug, Lightbulb, Shield, BookOpen, Github, ExternalLink } from 'lucide-astro';

const githubRepo = 'https://github.com/nyuchitech/learning';

// Community features data
const communityFeatures = [
  {
    icon: MessageSquare,
    title: "Discussions",
    description: "Join conversations about implementation strategies, best practices, and share your experiences. Ask questions, get advice from other schools, and discuss the future of digital education in Africa.",
    link: `${githubRepo}/discussions`,
    linkText: "Start a Discussion"
  },
  {
    icon: GitPullRequest,
    title: "Issues & Suggestions",
    description: "Found something that needs improvement? Have ideas for new features? Browse existing issues or create new ones to help us track and prioritize improvements.",
    link: `${githubRepo}/issues`,
    linkText: "Browse Issues"
  },
  {
    icon: Bug,
    title: "Report a Bug",
    description: "Encountered a technical issue or something not working as expected? Report bugs so we can fix them quickly and improve the framework for everyone.",
    link: `${githubRepo}/issues/new?template=bug_report.md`,
    linkText: "Report Bug"
  },
  {
    icon: Lightbulb,
    title: "Feature Requests",
    description: "Have an idea for a new capability or enhancement? Submit feature requests and help shape the future direction of the framework.",
    link: `${githubRepo}/issues/new?template=feature_request.md`,
    linkText: "Request Feature"
  },
  {
    icon: BookOpen,
    title: "Community Wiki",
    description: "Access community-contributed documentation, implementation guides, troubleshooting tips, and real-world case studies from schools using the framework.",
    link: `${githubRepo}/wiki`,
    linkText: "Explore Wiki"
  },
  {
    icon: Shield,
    title: "Security",
    description: "Review our security policies and report security vulnerabilities responsibly. We take security seriously to protect schools and student data.",
    link: `${githubRepo}/security`,
    linkText: "View Security Policy"
  }
];

const contributionBenefits = [
  { title: "Direct Impact", description: "Your contributions directly help schools in your community and across the continent." },
  { title: "Collective Knowledge", description: "Share lessons learned and benefit from the experiences of others." },
  { title: "Shape the Future", description: "Influence the direction of digital education in Africa." },
  { title: "Build Together", description: "Embody the Ubuntu philosophy: \"I am because we are.\"" }
];

const stats = [
  { icon: Users, number: "Open", label: "Fully Open Source" },
  { icon: MessageSquare, number: "Community", label: "Driven by Educators" },
  { icon: Github, number: "Collaborative", label: "Built Together" }
];
---

<BaseLayout
  title="Community - K-12 Digital Campus Framework"
  description="Join our community to help build and improve the K-12 Digital Campus Framework. Report issues, request features, contribute ideas, and collaborate with educators across Africa."
  keywords="K-12 framework community, educational technology collaboration, open-source education, GitHub community, digital transformation community, African education community"
>
  <!-- Hero Section -->
  <section class="py-40 px-4 pb-24 text-center bg-gradient-to-br from-[var(--bg-surface)] to-[var(--bg)] border-b-[6px] border-[var(--primary)]">
    <div class="max-w-[1200px] mx-auto">
      <h1 class="text-[clamp(2rem,10vw,4rem)] font-black mb-6 text-[var(--text)] tracking-tight leading-tight font-serif">Join Our Community</h1>
      <p class="text-[clamp(1rem,3vw,1.5rem)] italic text-[var(--text-secondary)] mb-8 tracking-wide">Ubuntu: When we build together, we all succeed</p>
      <p class="text-[clamp(1rem,2.5vw,1.25rem)] max-w-[900px] mx-auto leading-relaxed text-[var(--text)]">
        This framework thrives on community collaboration. Whether you're an educator, IT professional,
        student, or administrator, your voice matters. Help us build, improve, and adapt this framework
        for schools across Africa and beyond.
      </p>
    </div>
  </section>

  <!-- Community Features Grid -->
  <section class="py-24 px-4 bg-[var(--bg-surface)]">
    <div class="max-w-[1200px] mx-auto">
      <h2 class="text-center text-[clamp(2rem,8vw,3rem)] mb-20 text-[var(--text)] font-black tracking-tight leading-tight relative pb-8 after:content-[''] after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-[150px] after:h-2 after:bg-[var(--primary)] after:shadow-lg">How to Get Involved</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        {communityFeatures.map((feature) => (
          <a href={feature.link} target="_blank" rel="noopener noreferrer" class="bg-[var(--bg)] p-10 rounded-2xl border border-[var(--border)] transition-all duration-300 no-underline text-inherit flex flex-col gap-6 hover:-translate-y-2 hover:scale-[1.02] hover:shadow-xl hover:bg-[var(--bg-surface)]">
            <div class="flex justify-center items-center w-24 h-24 bg-[var(--bg-surface)] rounded-full mx-auto shadow-md">
              <feature.icon class="text-[var(--primary)]" size={48} strokeWidth={1.5} />
            </div>
            <h3 class="text-2xl text-[var(--text)] font-extrabold tracking-tight text-center m-0">{feature.title}</h3>
            <p class="leading-relaxed text-[var(--text)] text-lg flex-1 text-center">{feature.description}</p>
            <div class="flex items-center justify-center gap-2 text-[var(--primary)] font-bold tracking-wide text-lg transition-all duration-300">
              <span>{feature.linkText}</span>
              <ExternalLink size={20} strokeWidth={2} />
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Contribution Guidelines -->
  <section class="py-24 px-4 bg-[var(--bg)]">
    <div class="max-w-[1200px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-[clamp(2rem,6vw,3rem)] font-black mb-6 text-[var(--text)] tracking-tight">Why Contribute?</h2>
          <p class="text-xl leading-relaxed mb-8 text-[var(--text)]">
            This framework is <strong>open, shareable, and community-driven</strong>. Every contribution—whether
            it's a bug report, feature suggestion, discussion comment, or documentation improvement—helps
            schools across Africa and beyond implement better digital transformation strategies.
          </p>
          <ul class="list-none p-0 space-y-0">
            {contributionBenefits.map((benefit) => (
              <li class="py-4 pl-8 relative text-lg leading-relaxed border-b border-[var(--border)] last:border-b-0 before:content-['→'] before:absolute before:left-0 before:text-[var(--primary)] before:font-black before:text-2xl">
                <strong class="text-[var(--primary)] font-bold">{benefit.title}:</strong> {benefit.description}
              </li>
            ))}
          </ul>
        </div>
        <div class="hidden lg:flex justify-center items-center">
          <Github size={200} strokeWidth={1} class="text-[var(--primary)] opacity-30" />
        </div>
      </div>
    </div>
  </section>

  <!-- Community Stats -->
  <section class="py-24 px-4 bg-[var(--primary)] text-[var(--text)] border-y-8 border-white">
    <div class="max-w-[1200px] mx-auto">
      <h2 class="text-center text-[clamp(2rem,8vw,3rem)] mb-20 text-[var(--text)] font-black tracking-tight relative pb-8 after:content-[''] after:absolute after:bottom-0 after:left-1/2 after:-translate-x-1/2 after:w-[150px] after:h-2 after:bg-[var(--bg-surface)] after:shadow-lg">Growing Together</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 max-w-[1200px] mx-auto">
        {stats.map((stat) => (
          <div class="text-center p-10 bg-[var(--primary)]/10 rounded-2xl backdrop-blur-sm transition-all duration-300 hover:scale-105 hover:bg-[var(--primary)]/15">
            <div class="mb-6 flex justify-center text-[var(--text)]">
              <stat.icon size={48} strokeWidth={1.5} />
            </div>
            <div class="text-5xl font-black text-[var(--text)] mb-2 tracking-tight">{stat.number}</div>
            <div class="text-[var(--text)] text-lg font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-32 px-4 text-center bg-gradient-to-br from-black/95 to-[var(--bg)] text-[var(--text)] border-t-[10px] border-white">
    <div class="max-w-[1200px] mx-auto">
      <h2 class="text-[clamp(2rem,8vw,4rem)] font-black mb-8 tracking-tight leading-tight">Ready to Contribute?</h2>
      <p class="text-xl mb-12 max-w-[800px] mx-auto leading-relaxed">
        Visit our GitHub repository to get started. Every voice matters in building the future of education.
      </p>
      <a href={githubRepo} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 py-5 px-12 text-lg rounded-full bg-[var(--bg-surface)] text-[var(--primary)] font-semibold transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
        <Github size={24} strokeWidth={2} />
        Visit GitHub Repository
      </a>
    </div>
  </section>
</BaseLayout>
