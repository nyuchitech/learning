---
import BaseLayout from '../../layouts/BaseLayout.astro';
import butter from '../../lib/buttercms';

// Fetch posts from ButterCMS
let posts: any[] = [];
let error = null;

if (butter) {
  try {
    const response = await butter.post.list({ page: 1, page_size: 20 });
    posts = response?.data?.data || [];
  } catch (e) {
    console.error('Error fetching posts from ButterCMS:', e);
    error = e;
  }
}
---

<BaseLayout
  title="Blog & Insights"
  description="Insights on digital transformation in African education. Implementation strategies, success stories, digital literacy best practices, and open-source technology for schools."
  keywords="education technology blog, digital transformation insights, African education news, school technology implementation, digital literacy strategies, open-source education, education technology case studies"
>
  <div class="blog-container">
    <header class="blog-header">
      <h1>Framework Insights & Updates</h1>
      <p class="blog-subtitle">Exploring digital transformation in education, implementation strategies, and success stories</p>
    </header>

    {error && (
      <div class="blog-message blog-error">
        <p>Unable to load posts. Please try again later.</p>
      </div>
    )}

    {posts.length === 0 && !error && (
      <div class="blog-message">
        <p>No blog posts available yet. Check back soon!</p>
      </div>
    )}

    <div class="blog-grid">
      {posts.map((post) => (
        <article class="blog-card">
          <time class="blog-date">
            {new Date(post.published).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          {post.featured_image && (
            <img
              src={post.featured_image}
              alt={post.featured_image_alt || post.title}
              class="blog-image"
            />
          )}
          <h2 class="blog-title">
            <a href={`/blog/${post.slug}`}>
              {post.title}
            </a>
          </h2>
          <p class="blog-summary">{post.summary}</p>
          <footer class="blog-card-footer">
            <span class="blog-author">
              By {post.author?.first_name} {post.author?.last_name}
            </span>
            <a href={`/blog/${post.slug}`} class="blog-read-more">
              Read more â†’
            </a>
          </footer>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .blog-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: calc(64px + 2rem) 1.5rem 3rem;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-header h1 {
    font-family: 'Noto Serif', Georgia, serif;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    color: #F5F5F4; /* Dark mode default */
    margin-bottom: 1rem;
  }

  /* Light mode header */
  :global(.light) .blog-header h1 {
    color: #141413;
  }

  @media (prefers-color-scheme: light) {
    :global(:not(.dark)) .blog-header h1 {
      color: #141413;
    }
  }

  .blog-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: #A1A1A1; /* Dark mode secondary */
    max-width: 600px;
    margin: 0 auto;
  }

  /* Light mode subtitle */
  :global(.light) .blog-subtitle {
    color: #525251;
  }

  @media (prefers-color-scheme: light) {
    :global(:not(.dark)) .blog-subtitle {
      color: #525251;
    }
  }

  .blog-message {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    margin-bottom: 2rem;
  }

  .blog-message p {
    color: var(--text-secondary);
  }

  .blog-error {
    border-color: var(--error);
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
  }

  .blog-card {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .blog-date {
    display: block;
    font-size: 0.875rem;
    color: var(--text-tertiary);
    margin-bottom: 1rem;
  }

  .blog-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 1.5rem;
  }

  .blog-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .blog-title a {
    color: #F5F5F4; /* Dark mode */
    text-decoration: none;
    transition: color 0.2s;
  }

  :global(.light) .blog-title a {
    color: #141413;
  }

  @media (prefers-color-scheme: light) {
    :global(:not(.dark)) .blog-title a {
      color: #141413;
    }
  }

  .blog-title a:hover {
    color: var(--primary);
  }

  .blog-summary {
    color: #A1A1A1; /* Dark mode secondary */
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  :global(.light) .blog-summary {
    color: #525251;
  }

  @media (prefers-color-scheme: light) {
    :global(:not(.dark)) .blog-summary {
      color: #525251;
    }
  }

  .blog-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .blog-author {
    font-size: 0.875rem;
    color: #737373; /* Dark mode tertiary */
  }

  :global(.light) .blog-author {
    color: #737372;
  }

  @media (prefers-color-scheme: light) {
    :global(:not(.dark)) .blog-author {
      color: #737372;
    }
  }

  .blog-read-more {
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s;
  }

  .blog-read-more:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .blog-container {
      padding: calc(64px + 1.5rem) 1rem 2rem;
    }

    .blog-header {
      margin-bottom: 2rem;
    }

    .blog-card {
      padding: 1.5rem;
    }

    .blog-image {
      height: 180px;
    }

    .blog-card-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }
</style>
