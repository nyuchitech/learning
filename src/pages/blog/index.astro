---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Static blog posts (until Sanity is connected)
const posts = [
  {
    slug: 'developing-world-educational-advantage',
    title: "The Developing World's Educational Advantage: Building Digital Campuses That Close Skills Gaps",
    excerpt: "Africa and the developing world can leapfrog traditional educational models by building digital-first learning environments optimized for the 2050 workplace from day one.",
    publishedAt: '2025-11-16',
    author: 'Framework Team'
  },
  {
    slug: 'launching-the-framework',
    title: 'Launching the African Education Digital Framework',
    excerpt: "Introducing a comprehensive blueprint for digital transformation in K-12 schools across Africa. Learn about the framework's vision, principles, and implementation strategies.",
    publishedAt: '2025-10-26',
    author: 'Framework Team'
  },
  {
    slug: 'why-open-source',
    title: 'Why Open-Source Matters for African Schools',
    excerpt: 'Discover how open-source software can save African schools 60-80% on infrastructure costs while providing world-class educational technology.',
    publishedAt: '2025-10-25',
    author: 'Framework Team'
  },
  {
    slug: 'digital-literacy-importance',
    title: 'Digital Literacy: More Than Just Using Technology',
    excerpt: 'True digital literacy goes beyond teaching tools—it develops critical thinking skills for navigating evolving technology and prepares students for constant change.',
    publishedAt: '2025-10-24',
    author: 'Framework Team'
  }
];
---

<BaseLayout
  title="Blog & Insights"
  description="Insights on digital transformation in African education. Implementation strategies, success stories, digital literacy best practices, and open-source technology for schools."
  keywords="education technology blog, digital transformation insights, African education news, school technology implementation, digital literacy strategies, open-source education, education technology case studies"
>
  <!-- Blog Hero Section with solid background -->
  <section class="blog-hero">
    <div class="blog-hero-content">
      <h1>Framework Insights & Updates</h1>
      <p class="blog-subtitle">Exploring digital transformation in education, implementation strategies, and success stories</p>
    </div>
  </section>

  <div class="blog-container">
    <div class="blog-grid">
      {posts.map((post) => (
        <article class="blog-card">
          <time class="blog-date">
            {new Date(post.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          <h2 class="blog-title">
            <a href={`/blog/${post.slug}`}>
              {post.title}
            </a>
          </h2>
          <p class="blog-summary">{post.excerpt}</p>
          <footer class="blog-card-footer">
            <span class="blog-author">
              By {post.author}
            </span>
            <a href={`/blog/${post.slug}`} class="blog-read-more">
              Read more →
            </a>
          </footer>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  /* Blog Hero - pushes content below fixed header */
  .blog-hero {
    padding-top: calc(64px + 4rem);
    padding-bottom: 3rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    background: var(--bg);
    text-align: center;
  }

  .blog-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .blog-hero h1 {
    font-family: 'Noto Serif', Georgia, serif;
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    color: var(--text);
    margin-bottom: 1rem;
  }

  .blog-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
  }

  .blog-card {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .blog-date {
    display: block;
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .blog-title {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  .blog-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }

  .blog-title a:hover {
    color: var(--primary);
  }

  .blog-summary {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .blog-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .blog-author {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .blog-read-more {
    color: var(--primary);
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s;
    display: inline-block;
  }

  .blog-read-more:hover {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .blog-hero {
      padding-top: calc(64px + 2rem);
      padding-bottom: 2rem;
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .blog-container {
      padding: 1.5rem 1rem 3rem;
    }

    .blog-card {
      padding: 1.5rem;
    }

    .blog-card-footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }
  }
</style>
