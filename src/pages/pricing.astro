---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageBreadcrumb from '../components/PageBreadcrumb.astro';
import { DollarSign, Check, CircleAlert, Info } from '@lucide/astro';

// Budget scenario tiers - These are cost estimates, NOT prices for Nyuchi services
const budgetScenarios = [
  {
    name: "Minimal Budget",
    badge: "Lowest Cost",
    estimate: "$0-$15K",
    period: "3-year estimate",
    description: "Leverage completely free and open-source solutions. Ideal for schools with technical staff or community volunteers.",
    includes: [
      "Free LMS (Moodle, self-hosted)",
      "Free SIS (OpenSIS, Gibbon)",
      "Google Workspace for Education",
      "Open-source analytics",
      "Community support & forums",
      "BYOD or existing devices"
    ],
    href: "#minimal-breakdown",
    variant: "secondary"
  },
  {
    name: "Modest Budget",
    estimate: "$25K-$45K",
    period: "3-year estimate",
    description: "Mix of free tools with some paid services for reliability. Good balance for schools starting their digital journey.",
    includes: [
      "Moodle or Google Classroom",
      "Low-cost cloud SIS",
      "Basic cloud hosting",
      "Staff training costs",
      "Basic device lending program",
      "Part-time IT support"
    ],
    href: "#modest-breakdown",
    variant: "secondary"
  },
  {
    name: "Moderate Budget",
    badge: "Common Scenario",
    estimate: "$60K-$90K",
    period: "3-year estimate",
    description: "Balanced investment in technology, training, and infrastructure. Represents typical costs for comprehensive transformation.",
    includes: [
      "Full LMS with integrations",
      "Cloud-based SIS platform",
      "1:3 device lending program",
      "Professional development",
      "Analytics & reporting tools",
      "Dedicated IT support"
    ],
    href: "#moderate-breakdown",
    variant: "primary"
  },
  {
    name: "Comprehensive Budget",
    estimate: "$120K-$180K",
    period: "3-year estimate",
    description: "Full-featured implementation with 1:1 devices, advanced analytics, and comprehensive training programs.",
    includes: [
      "Enterprise LMS & SIS",
      "1:1 device program",
      "AI-powered analytics",
      "Extensive PD programs",
      "Parent engagement platforms",
      "Full-time IT support"
    ],
    href: "#comprehensive-breakdown",
    variant: "secondary"
  }
];

// Savings strategies
const savingsStrategies = [
  {
    title: "Phased Rollout",
    description: "Start with free tools and core grades, expand gradually as budget allows. Year 1 can be under $10K."
  },
  {
    title: "BYOD Programs",
    description: "Encourage students to bring smartphones/tablets. Reduces device costs by 60-80%."
  },
  {
    title: "Open Source First",
    description: "Prioritize free, open-source tools. Upgrade to paid tools only when necessary."
  },
  {
    title: "Community Partnerships",
    description: "Partner with local tech companies, NGOs, or universities for donated equipment and expertise."
  },
  {
    title: "Bulk Purchasing",
    description: "Coordinate with other schools for group purchasing discounts on devices and software."
  },
  {
    title: "Grant Funding",
    description: "Apply for education technology grants from government, foundations, and international organizations."
  }
];
---

<BaseLayout
  title="Cost Estimation & Budget Planning Guide"
  description="Budget planning guide for implementing the K-12 Digital Campus Framework. Realistic cost estimates from free open-source to comprehensive implementations. The framework is free - these are costs you'll incur implementing it yourself."
  keywords="education technology costs, school technology budget, open-source education, free education software, digital transformation budget, affordable education technology, school IT costs Africa, implementation cost estimation"
>
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 py-6 sm:py-8">
    <PageBreadcrumb items={[{ label: "Cost Estimation & Budget Planning" }]} />

    <!-- Header -->
    <div class="text-center py-10 sm:py-12 md:py-16 px-4 sm:px-6 bg-gradient-to-br from-[var(--bg-surface)]/90 to-[var(--bg)]/95 text-[var(--text)] rounded-xl md:rounded-2xl mb-8 sm:mb-12 md:mb-16 relative overflow-hidden">
      <h1 class="text-[clamp(1.5rem,5vw,3.5rem)] font-bold font-display mb-3 sm:mb-4 relative z-10">Cost Estimation & Budget Planning</h1>
      <p class="text-[clamp(1rem,2.5vw,1.5rem)] opacity-95 mb-3 sm:mb-4 relative z-10">Plan your school's digital transformation investment</p>

