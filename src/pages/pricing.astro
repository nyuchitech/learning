  {
    title: "Community Partnerships",
    description: "Partner with local tech companies, NGOs, or universities for donated equipment and expertise."
  },
  {
    title: "Bulk Purchasing",
    description: "Coordinate with other schools for group purchasing discounts on devices and software."
  },
  {
    title: "Grant Funding",
    description: "Apply for education technology grants from government, foundations, and international organizations."
  }
];
