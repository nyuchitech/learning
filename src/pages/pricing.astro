    <!-- Modest Budget Breakdown -->
    <section id="modest-breakdown" class="mb-16 p-8 md:p-12 bg-[var(--bg-surface)] rounded-2xl border border-[var(--border)]">
      <h2 class="text-[var(--primary)] mb-8 flex items-center gap-4 text-2xl font-bold">
