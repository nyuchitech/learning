import BaseLayout from '../layouts/BaseLayout.astro';
import { DollarSign, Check, AlertCircle } from 'lucide-astro';

// Pricing tiers data
const tiers = [
  {
    name: "Free & Open Source",
    badge: "Most Affordable",
    price: "$0-$15K",
    period: "3-year total",
    description: "Leverage completely free and open-source solutions. Perfect for schools with technical staff or community support.",
