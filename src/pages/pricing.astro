          <h3 class="text-[var(--primary)] mb-3 sm:mb-4 text-lg sm:text-xl md:text-2xl font-bold">{scenario.name}</h3>
          <div class="mb-4 sm:mb-6">
            <span class="block text-2xl sm:text-3xl md:text-4xl font-extrabold text-[var(--primary)] leading-tight">{scenario.estimate}</span>
            <span class="text-[var(--text-secondary)] text-caption">{scenario.period}</span>
