        <div class="bg-[var(--bg-surface)] rounded-xl md:rounded-2xl p-5 sm:p-6 md:p-8 shadow-md relative transition-all duration-300 hover:-translate-y-2 hover:shadow-xl border border-[var(--border)]">
          {scenario.badge && (
            <span class="absolute -top-3 right-3 sm:right-5 bg-[var(--primary)] text-white px-3 sm:px-4 py-1.5 sm:py-2 rounded-full text-caption font-semibold">
              {scenario.badge}
            </span>
