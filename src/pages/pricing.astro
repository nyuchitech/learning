];

// Savings strategies
const savingsStrategies = [
  {
    title: "Phased Rollout",
    description: "Start with free tools and core grades, expand gradually as budget allows. Year 1 can be under $10K."
  },
  {
    title: "BYOD Programs",
    description: "Encourage students to bring smartphones/tablets. Reduces device costs by 60-80%."
  },
  {
    title: "Open Source First",
    description: "Prioritize free, open-source tools. Upgrade to paid tools only when necessary."
