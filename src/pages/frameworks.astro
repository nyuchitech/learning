---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BookOpen, Download, Users, Smartphone, ArrowRight } from 'lucide-astro';

const frameworks = [
  {
    icon: BookOpen,
    title: 'K-12 Digital Campus Framework',
    version: 'v1.0',
    date: 'October 2024',
    badge: 'Core',
    badgeColor: 'cobalt',
    description: 'A comprehensive blueprint for digital transformation in K-12 schools. Covers infrastructure, software systems, pedagogy, professional development, and implementation strategies tailored for African contexts.',
    features: [
      'Mobile-first, low-bandwidth design principles',
      'Free & open-source software recommendations',
      'Budget scenarios from minimal to comprehensive',
      'Multilingual support (African languages + English, French, Chinese)',
      'BYOD and phased rollout strategies'
    ],
    stats: [
      { label: '4 Budget Scenarios', value: 'Minimal to comprehensive' },
      { label: '$0-$180K', value: '3-year implementation range' }
    ],
    readUrl: '/framework',
    downloadUrl: '/frameworks/k12-digital-campus-framework.pdf'
  },
  {
    icon: Users,
    title: 'K-12 Support Process Framework',
    version: 'v1.0',
    date: 'October 2024',
    badge: 'Support',
    badgeColor: 'tanzanite',
    description: 'Complete documentation for a three-tier support system designed for digital campuses. Balances AI-powered self-service, educational technology support, and IT operations.',
    features: [
      { bold: 'Tier 0:', text: 'AI-powered chatbot (40% resolution rate)' },
      { bold: 'Tier 1:', text: 'EdTech team for pedagogical support (70% resolution)' },
      { bold: 'Tier 2:', text: 'IT Operations for infrastructure (95% SLA compliance)' }
    ],
    stats: [
      { label: '3 Support Tiers', value: 'AI + EdTech + IT Ops' },
      { label: '40-95% Resolution', value: 'Tier-based efficiency' }
    ],
    readUrl: '/support-framework',
    downloadUrl: '/frameworks/k12-support-process-framework.pdf'
  },
  {
    icon: Smartphone,
    title: 'Digital Literacy Framework for Africa',
    version: 'v1.0',
    date: 'October 2024',
    badge: 'Curriculum',
    badgeColor: 'malachite',
    description: 'Comprehensive mobile-first digital literacy framework designed for K-12 students, teachers, and adults. Emphasizes digital citizenship, lifelong learning, and preparing for the 2050 digital landscape.',
    features: [
      { bold: 'Mobile-First:', text: 'No 1:1 device assumption—designed for shared access' },
      { bold: 'Lifelong Learning:', text: 'Parallel pathways for students, teachers, parents' },
      { bold: 'Digital Citizenship:', text: 'Safety, ethics, and responsible online behavior' },
      { bold: '2050-Ready:', text: 'AI collaboration, remote work, digital entrepreneurship' },
      { bold: 'Standards:', text: 'Age-appropriate learning progressions (Ages 5-18+)' }
    ],
    stats: [
      { label: '4 Age Groups', value: 'Early Years to Secondary+' },
      { label: '6 Citizenship Pillars', value: 'Safety, rights, ethics, wellness' }
    ],
    readUrl: '/digital-literacy-framework',
    downloadUrl: '/frameworks/digital-literacy-framework.pdf'
  }
];
---

<BaseLayout
  title="Educational Frameworks - Nyuchi Learning"
  description="Browse our collection of open, shareable frameworks for digital transformation in African schools. Free to use, copy, adapt, and share."
  keywords="educational frameworks, K-12 digital transformation, school support systems, African education, open source education"
>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center text-[var(--text)] text-center overflow-hidden relative">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1497486751825-1233686d5d80?w=1600&q=80')] bg-cover bg-center bg-fixed"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-black/40 to-neutral-900/50"></div>
    <div class="relative z-10 px-4 py-8 max-w-[1200px] mx-auto">
      <p class="text-base md:text-lg italic mb-8 tracking-widest font-medium opacity-95">Ubuntu: I am because we are</p>
      <div class="mb-12">
        <h1 class="font-display text-6xl md:text-7xl lg:text-8xl font-black leading-tight tracking-tighter drop-shadow-2xl">Frame</h1>
        <h1 class="font-display text-6xl md:text-7xl lg:text-8xl font-black leading-tight tracking-tighter drop-shadow-2xl">+ Works</h1>
      </div>
      <p class="text-lg md:text-xl lg:text-2xl leading-relaxed max-w-[900px] mx-auto font-normal opacity-95">
        Open, shareable frameworks designed to empower schools across Africa.
        Free to use, copy, adapt, and improve for your community.
      </p>
    </div>
  </section>

  <!-- Frameworks List -->
  <section class="py-16 md:py-24 px-4 bg-[var(--bg)]">
    <div class="max-w-[1400px] mx-auto">
      <h2 class="font-display text-3xl md:text-4xl font-bold text-[var(--primary)] text-center mb-12">Available Frameworks</h2>

      <div class="flex flex-col gap-8 mb-16">
        {frameworks.map((framework) => (
          <div class="bg-[var(--bg-surface)] rounded-2xl border border-[var(--border)] p-6 md:p-10 flex flex-col md:flex-row gap-6 md:gap-8 hover:-translate-y-1 hover:border-[var(--primary)] transition-all duration-300">
            <!-- Icon -->
            <div class="flex-shrink-0 w-16 h-16 md:w-20 md:h-20 flex items-center justify-center bg-[var(--bg-elevated)] rounded-2xl text-[var(--primary)]">
              <framework.icon size={48} strokeWidth={1.5} />
            </div>

            <!-- Content -->
            <div class="flex-1 flex flex-col gap-4">
              <!-- Header with title and badges -->
              <div class="flex flex-wrap items-start gap-3">
                <h3 class="font-display text-xl md:text-2xl font-bold text-[var(--primary)]">{framework.title}</h3>
                <div class="flex gap-2">
                  <span class={`inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-[var(--color-${framework.badgeColor}-container-dark)] text-[var(--color-${framework.badgeColor}-on-container-dark)]`}>
                    {framework.badge}
                  </span>
                  <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full bg-[var(--bg-elevated)] text-[var(--text-secondary)]">
                    {framework.version}
                  </span>
                </div>
              </div>

              <!-- Version date -->
              <p class="text-sm text-[var(--text-tertiary)] font-medium">{framework.date}</p>

              <!-- Description -->
              <p class="text-base leading-relaxed text-[var(--text)]">{framework.description}</p>

              <!-- Features -->
              <div class="bg-[var(--bg-elevated)] rounded-xl p-5">
                <h4 class="text-sm font-semibold text-[var(--primary)] mb-3 tracking-wide">Key Features</h4>
                <ul class="space-y-2">
                  {framework.features.map((feature) => (
                    <li class="flex items-start gap-2 text-[var(--text)]">
                      <span class="text-[var(--primary)] font-bold mt-0.5">→</span>
                      {typeof feature === 'string' ? (
                        <span>{feature}</span>
                      ) : (
                        <span><strong class="text-[var(--text)]">{feature.bold}</strong> {feature.text}</span>
                      )}
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {framework.stats.map((stat) => (
                  <div class="flex flex-col gap-1">
                    <span class="font-display text-xl font-bold text-[var(--primary)]">{stat.label}</span>
                    <span class="text-sm text-[var(--text-secondary)]">{stat.value}</span>
                  </div>
                ))}
              </div>

              <!-- Actions -->
              <div class="flex flex-wrap gap-3 pt-2">
                <a href={framework.readUrl} class="inline-flex items-center justify-center h-10 px-5 border-2 border-[var(--primary)] text-[var(--primary)] font-semibold rounded-xl hover:bg-[var(--primary-container)] transition-all duration-200">
                  Read Online
                </a>
                <a href={framework.downloadUrl} class="inline-flex items-center justify-center gap-2 h-10 px-5 bg-[var(--primary)] text-white font-semibold rounded-xl hover:brightness-110 transition-all duration-200" download>
                  <Download size={18} />
                  Download PDF
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Coming Soon -->
      <div class="text-center p-8 md:p-12 bg-[var(--bg-surface)] rounded-2xl border border-[var(--border)]">
        <span class="inline-flex items-center px-4 py-1.5 text-sm font-medium rounded-full bg-[var(--color-gold-container-dark)] text-[var(--color-gold-on-container-dark)] mb-6">
          Coming Soon
        </span>
        <h2 class="font-display text-2xl md:text-3xl font-bold text-[var(--primary)] mb-4">More Frameworks Coming Soon</h2>
        <p class="text-base md:text-lg leading-relaxed text-[var(--text-secondary)] max-w-[700px] mx-auto">
          Nyuchi Learning is committed to developing comprehensive frameworks for digital
          transformation in African education. Stay tuned for upcoming releases covering
          data analytics, student information systems, and more.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
