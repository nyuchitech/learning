---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageBreadcrumb from '../components/PageBreadcrumb.astro';
import CTASection from '../components/CTASection.astro';
import { BookOpen, FileText, Wrench, Users, MessageCircle, Download, CircleCheckBig, Video, CircleHelp, GraduationCap, Target, Globe } from '@lucide/astro';

// Quick links data
const quickLinks = [
  { href: "#getting-started", icon: Target, title: "Getting Started", description: "Begin your digital transformation journey" },
  { href: "#technical", icon: Wrench, title: "Technical Docs", description: "Platform setup and integration guides" },
  { href: "#pedagogical", icon: GraduationCap, title: "Pedagogical Resources", description: "Curricula, lesson plans, assessments" },
  { href: "#community", icon: Users, title: "Community & Support", description: "Forums, office hours, peer mentorship" }
];

// Getting started resources
const gettingStartedResources = [
  {
    icon: CircleCheckBig,
    title: "Self-Assessment Tool",
    description: "Evaluate your school's digital readiness across infrastructure, staff capacity, and student access. Identify strengths and gaps before implementation.",
    type: "Interactive Tool",
    time: "30-45 minutes",
    href: "/resources/self-assessment",
    buttonText: "Start Assessment"
  },
  {
    icon: FileText,
    title: "Readiness Checklist",
    description: "Step-by-step checklist covering stakeholder buy-in, budget planning, infrastructure audit, and team preparation. Downloadable PDF with worksheets.",
    type: "PDF Download",
    time: "12 pages",
    href: "/frameworks/readiness-checklist.pdf",
    buttonText: "Download PDF",
    download: true
  },
  {
    icon: Users,
    title: "Stakeholder Engagement Templates",
    description: "Presentation templates for school boards, teacher meetings, parent information sessions. Customizable PowerPoint/Google Slides with talking points.",
    type: "Templates",
    time: "3 templates",
    href: "/resources/stakeholder-templates",
    buttonText: "View Templates"
  },
  {
    icon: Video,
    title: "Framework Overview Webinar",
    description: "60-minute recorded webinar introducing all frameworks, implementation approach, success stories, and Q&A. Perfect for school leadership teams.",
    type: "Video",
    time: "60 minutes",
    href: "/resources/overview-webinar",
    buttonText: "Watch Webinar"
  }
];

// Technical resources
const technicalResources = [
  {
    icon: FileText,
    title: "Platform Setup Guides",
    description: "Step-by-step guides for Google Workspace for Education, Moodle LMS, Gibbon SIS, Nextcloud, and other open-source platforms. Screenshots and troubleshooting included.",
    links: [
      { href: "/resources/google-workspace-setup", text: "Google Workspace for Education" },
      { href: "/resources/moodle-setup", text: "Moodle LMS Setup" },
      { href: "/resources/gibbon-sis-setup", text: "Gibbon SIS Configuration" },
      { href: "/resources/nextcloud-setup", text: "Nextcloud Storage" }
    ]
  },
  {
    icon: Wrench,
    title: "Integration Tutorials",
    description: "Connect systems together: SSO configuration, API integration between SIS and LMS, data warehouse setup, analytics pipelines. Video walkthroughs and code samples.",
    links: [
      { href: "/resources/sso-integration", text: "Single Sign-On (SSO) Setup" },
      { href: "/resources/sis-lms-integration", text: "SIS ↔ LMS Data Sync" },
      { href: "/resources/analytics-setup", text: "Analytics & Reporting" }
    ]
  },
  {
    icon: CircleHelp,
    title: "Troubleshooting Knowledge Base",
    description: "Searchable database of common issues, error messages, and solutions. Community-contributed fixes and official support articles. Updated weekly.",
    type: "Knowledge Base",
    time: "500+ articles",
    href: "/resources/knowledge-base",
    buttonText: "Browse Knowledge Base"
  },
  {
    icon: FileText,
    title: "System Administration Manual",
    description: "Comprehensive guide for IT administrators: user management, backups, security best practices, maintenance schedules, disaster recovery procedures.",
    type: "PDF Download",
    time: "85 pages",
    href: "/frameworks/system-admin-manual.pdf",
    buttonText: "Download Manual",
    download: true
  }
];

// Pedagogical resources
const pedagogicalResources = [
  {
    icon: BookOpen,
    title: "Digital Literacy K-12 Curricula",
    description: "Complete digital literacy progression for K-2, 3-5, 6-8, and 9-12. Lesson plans, activities, projects, and assessments for each grade level. Aligned with 2050 competencies.",
    links: [
      { href: "/resources/digital-literacy-k2", text: "K-2: Digital Citizenship Foundations" },
      { href: "/resources/digital-literacy-3-5", text: "3-5: Digital Tools Mastery" },
      { href: "/resources/digital-literacy-6-8", text: "6-8: Digital Competency & Coding" },
      { href: "/resources/digital-literacy-9-12", text: "9-12: Advanced Digital & Career Skills" }
    ]
  },
  {
    icon: FileText,
    title: "Project-Based Learning Templates",
    description: "Ready-to-use project templates for interdisciplinary learning: real-world challenges, rubrics, student worksheets, teacher facilitation guides. Mobile-optimized and offline-capable.",
    type: "Templates",
    time: "25+ projects",
    href: "/resources/pbl-templates",
    buttonText: "Browse Projects"
  },
  {
    icon: CircleCheckBig,
    title: "Assessment Rubrics for Competencies",
    description: "Rubrics for assessing grit, adaptability, collaboration, critical thinking, and digital fluency. Portfolio assessment guides and badge/microcredential criteria.",
    type: "PDF Download",
    time: "30 pages",
    href: "/frameworks/competency-rubrics.pdf",
    buttonText: "Download Rubrics",
    download: true
  },
  {
    icon: GraduationCap,
    title: "Teacher Professional Development",
    description: "40-hour training curriculum for teachers: digital pedagogy, project-based learning, competency assessment, technology integration. Workshop plans and facilitator guides included.",
    links: [
      { href: "/resources/teacher-pd-module1", text: "Module 1: Digital Pedagogy (10 hours)" },
      { href: "/resources/teacher-pd-module2", text: "Module 2: Project-Based Learning (12 hours)" },
      { href: "/resources/teacher-pd-module3", text: "Module 3: Competency Assessment (10 hours)" },
      { href: "/resources/teacher-pd-module4", text: "Module 4: Technology Integration (8 hours)" }
    ]
  }
];

// Community resources
const communityResources = [
  {
    icon: MessageCircle,
    title: "Implementation Forums",
    description: "Ask questions, share solutions, troubleshoot issues with schools implementing the same frameworks. Active community moderated by Nyuchi Learning team.",
    type: "Discussion Forum",
    time: "1,200+ members",
    href: "https://community.nyuchi.com",
    buttonText: "Join Forum",
    external: true
  },
  {
    icon: Video,
    title: "Monthly Office Hours",
    description: "Live Q&A sessions with Nyuchi Learning experts. Every second Tuesday, 2:00 PM CAT. Bring your questions about implementation, technical issues, or pedagogical approaches.",
    type: "Live Webinar",
    time: "90 minutes monthly",
    href: "/resources/office-hours",
    buttonText: "Register for Next Session"
  },
  {
    icon: Users,
    title: "Peer Mentorship Program",
    description: "Connect with schools 6-12 months ahead in implementation journey. Monthly check-ins, shared learnings, accountability partnerships. Free for all implementing schools.",
    type: "Mentorship",
    time: "3-6 month commitment",
    href: "/resources/peer-mentorship",
    buttonText: "Request a Mentor"
  },
  {
    icon: Globe,
    title: "Success Stories",
    description: "Read case studies from schools across Africa, Asia, Latin America, and the Pacific. Lessons learned, implementation timelines, results achieved, challenges overcome.",
    type: "Case Studies",
    time: "15+ schools profiled",
    href: "/resources/success-stories",
    buttonText: "Read Case Studies"
  }
];

// Consultation tiers
const tiers = [
  {
    name: "Free Tier",
    price: "$0",
    period: "",
    subtitle: "Self-Service Resources",
    features: [
      "All frameworks and documentation",
      "Implementation forums access",
      "Knowledge base articles",
      "Monthly office hours (group Q&A)",
      "Peer mentorship program"
    ],
    href: "/resources",
    buttonText: "Start Free",
    variant: "secondary"
  },
  {
    name: "Basic Tier",
    price: "$500",
    period: "/year",
    subtitle: "Email Support & Group Webinars",
    features: [
      "Everything in Free Tier",
      "Email support (48-hour response)",
      "Quarterly group webinars (school-specific)",
      "Priority forum responses",
      "Early access to new resources"
    ],
    href: "/consultation?tier=basic",
    buttonText: "Get Started",
    variant: "primary"
  },
  {
    name: "Standard Tier",
    price: "$2,500",
    period: "/year",
    subtitle: "1-on-1 Consulting & Custom Plans",
    badge: "Most Popular",
    features: [
      "Everything in Basic Tier",
      "1-on-1 video consulting (8 hours/year)",
      "Custom implementation plan",
      "Email support (24-hour response)",
      "Quarterly progress reviews",
      "Budget & funding guidance"
    ],
    href: "/consultation?tier=standard",
    buttonText: "Get Started",
    variant: "primary",
    highlighted: true
  },
  {
    name: "Premium Tier",
    price: "Custom",
    period: "",
    subtitle: "On-Site Support & Full Partnership",
    features: [
      "Everything in Standard Tier",
      "On-site implementation support (2-4 visits/year)",
      "Dedicated account manager",
      "Teacher training workshops (on-site)",
      "Custom framework adaptations",
      "Priority technical support (4-hour response)"
    ],
    href: "/consultation?tier=premium",
    buttonText: "Contact Us",
    variant: "primary"
  }
];
---

<BaseLayout
  title="Resources Hub - Implementation Guides & Support"
  description="Comprehensive resources for implementing Nyuchi Learning frameworks: getting started guides, technical documentation, pedagogical resources, community support, and consultation services. Open and free for schools across Africa and the developing world."
  keywords="framework implementation, school digital transformation, getting started guide, technical documentation, pedagogical resources, teacher training, educational technology support, school implementation resources"
>
  <!-- Breadcrumb -->
  <div class="max-w-[1200px] mx-auto px-6 sm:px-8 pt-6">
    <PageBreadcrumb items={[
      { label: 'Resources' }
    ]} />
  </div>

  <!-- Coming Soon Overlay -->
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-[var(--bg)]/95 backdrop-blur-sm px-4 sm:px-6">
    <div class="px-4 sm:px-8 max-w-[600px]">
      <div class="w-16 h-16 sm:w-20 sm:h-20 mx-auto mb-6 sm:mb-8 rounded-full bg-gradient-to-br from-[var(--primary)] to-[var(--mineral-tanzanite)] flex items-center justify-center">
        <BookOpen class="text-white w-8 h-8 sm:w-10 sm:h-10" stroke-width={1.5} />
      </div>
      <h2 class="font-display text-[clamp(2.5rem,6vw,4rem)] font-bold text-[var(--text)] mb-3 sm:mb-4">Coming Soon</h2>
      <p class="text-body-lg text-[var(--text-secondary)] mb-6 sm:mb-8">
        We're putting the finishing touches on our Resources Hub. Check back soon for implementation guides, technical documentation, and community support resources.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 items-start">
        <a href="/frameworks" class="inline-flex items-center justify-center h-12 px-6 sm:px-8 rounded-xl font-semibold transition-all duration-200 bg-[var(--primary)] text-white hover:-translate-y-0.5 hover:shadow-lg hover:brightness-110 w-full sm:w-auto text-body">
          Browse Frameworks
        </a>
        <a href="/" class="inline-flex items-center justify-center h-12 px-6 sm:px-8 rounded-xl font-semibold transition-all duration-200 bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg-surface)] w-full sm:w-auto text-body">
          Back to Home
        </a>
      </div>
      <p class="text-caption text-[var(--text-muted)] mt-6 sm:mt-10">
        Have questions? <a href="/consultation" class="text-[var(--primary)] hover:underline">Book a consultation</a> to discuss your implementation needs.
      </p>
    </div>
  </div>

  <div class="max-w-[1200px] mx-auto px-4 sm:px-6">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-[var(--primary)] to-[var(--primary-active)] text-[var(--text)] py-12 sm:py-16 md:py-24 px-4 sm:px-6 md:px-8 rounded-b-2xl md:rounded-b-3xl mb-8 sm:mb-12 md:mb-16">
      <h1 class="text-[clamp(2rem,6vw,3.5rem)] font-extrabold font-display mb-6">Resources Hub</h1>
      <p class="text-[clamp(1rem,2.5vw,1.35rem)] leading-relaxed mb-4 max-w-[800px]">
        Everything you need to implement Nyuchi Learning frameworks in your school—from getting started to advanced implementation strategies
      </p>
      <p class="text-lg font-medium opacity-90">Open resources • Free access • Community-driven</p>
    </section>

    <!-- Quick Links -->
    <section class="px-8 pb-16">
      <h2 class="text-2xl font-bold text-[var(--text)] mb-10">Quick Access</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {quickLinks.map((link) => (
          <a href={link.href} class="bg-[var(--bg-surface)] p-8 rounded-xl shadow-sm no-underline text-[var(--text)] border-2 border-transparent transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:border-[var(--primary)]">
            <link.icon class="text-[var(--primary)] mb-4" size={32} stroke-width={1.5} />
            <h3 class="text-xl font-bold text-[var(--primary)] mb-2">{link.title}</h3>
            <p class="text-body text-[var(--text-secondary)] m-0">{link.description}</p>
          </a>
        ))}
      </div>
    </section>

    <!-- Getting Started Section -->
    <section id="getting-started" class="py-16 px-8 border-b border-[var(--border)]">
      <div class="flex items-start gap-6 mb-12 flex-col md:flex-row">
        <Target class="text-[var(--primary)] flex-shrink-0" size={40} stroke-width={1.5} />
        <div>
          <h2 class="text-[clamp(1.75rem,4vw,2.25rem)] font-bold text-[var(--text)] mb-2">Getting Started</h2>
          <p class="text-lg text-[var(--text-secondary)]">New to Nyuchi Learning frameworks? Start here.</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {gettingStartedResources.map((resource) => (
          <div class="bg-[var(--bg-surface)] p-8 rounded-xl shadow-sm flex flex-col gap-4 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center gap-3">
              <resource.icon class="text-[var(--primary)] flex-shrink-0" size={28} stroke-width={1.5} />
              <h3 class="text-xl font-bold text-[var(--text)] m-0">{resource.title}</h3>
            </div>
            <p class="text-[var(--text-secondary)] leading-relaxed flex-grow">{resource.description}</p>
            <div class="flex gap-4 flex-wrap text-meta text-[var(--text-muted)]">
              <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.type}</span>
              <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.time}</span>
            </div>
            <a
              href={resource.href}
              class="inline-flex items-center justify-center gap-2 py-3 px-6 rounded-xl font-semibold text-body transition-all duration-200 bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg)]"
              {...(resource.download ? { download: true } : {})}
            >
              {resource.download && <Download size={16} />}
              {resource.buttonText}
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Technical Documentation -->
    <section id="technical" class="py-16 px-8 border-b border-[var(--border)]">
      <div class="flex items-start gap-6 mb-12 flex-col md:flex-row">
        <Wrench class="text-[var(--primary)] flex-shrink-0" size={40} stroke-width={1.5} />
        <div>
          <h2 class="text-[clamp(1.75rem,4vw,2.25rem)] font-bold text-[var(--text)] mb-2">Technical Documentation</h2>
          <p class="text-lg text-[var(--text-secondary)]">Platform setup guides, integration tutorials, and troubleshooting resources</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {technicalResources.map((resource) => (
          <div class="bg-[var(--bg-surface)] p-8 rounded-xl shadow-sm flex flex-col gap-4 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center gap-3">
              <resource.icon class="text-[var(--primary)] flex-shrink-0" size={28} stroke-width={1.5} />
              <h3 class="text-xl font-bold text-[var(--text)] m-0">{resource.title}</h3>
            </div>
            <p class="text-[var(--text-secondary)] leading-relaxed flex-grow">{resource.description}</p>
            {resource.links ? (
              <div class="flex flex-col gap-2">
                {resource.links.map((link) => (
                  <a href={link.href} class="text-[var(--primary)] no-underline text-body transition-colors hover:underline">
                    → {link.text}
                  </a>
                ))}
              </div>
            ) : (
              <>
                <div class="flex gap-4 flex-wrap text-meta text-[var(--text-muted)]">
                  <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.type}</span>
                  <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.time}</span>
                </div>
                <a
                  href={resource.href}
                  class="inline-flex items-center justify-center gap-2 py-3 px-6 rounded-xl font-semibold text-body transition-all duration-200 bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg)]"
                  {...(resource.download ? { download: true } : {})}
                >
                  {resource.download && <Download size={16} />}
                  {resource.buttonText}
                </a>
              </>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Pedagogical Resources -->
    <section id="pedagogical" class="py-16 px-8 border-b border-[var(--border)]">
      <div class="flex items-start gap-6 mb-12 flex-col md:flex-row">
        <GraduationCap class="text-[var(--primary)] flex-shrink-0" size={40} stroke-width={1.5} />
        <div>
          <h2 class="text-[clamp(1.75rem,4vw,2.25rem)] font-bold text-[var(--text)] mb-2">Pedagogical Resources</h2>
          <p class="text-lg text-[var(--text-secondary)]">Curricula, lesson plans, assessments, and teacher professional development</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {pedagogicalResources.map((resource) => (
          <div class="bg-[var(--bg-surface)] p-8 rounded-xl shadow-sm flex flex-col gap-4 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center gap-3">
              <resource.icon class="text-[var(--primary)] flex-shrink-0" size={28} stroke-width={1.5} />
              <h3 class="text-xl font-bold text-[var(--text)] m-0">{resource.title}</h3>
            </div>
            <p class="text-[var(--text-secondary)] leading-relaxed flex-grow">{resource.description}</p>
            {resource.links ? (
              <div class="flex flex-col gap-2">
                {resource.links.map((link) => (
                  <a href={link.href} class="text-[var(--primary)] no-underline text-body transition-colors hover:underline">
                    → {link.text}
                  </a>
                ))}
              </div>
            ) : (
              <>
                <div class="flex gap-4 flex-wrap text-meta text-[var(--text-muted)]">
                  <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.type}</span>
                  <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.time}</span>
                </div>
                <a
                  href={resource.href}
                  class="inline-flex items-center justify-center gap-2 py-3 px-6 rounded-xl font-semibold text-body transition-all duration-200 bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg)]"
                  {...(resource.download ? { download: true } : {})}
                >
                  {resource.download && <Download size={16} />}
                  {resource.buttonText}
                </a>
              </>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- Community & Support -->
    <section id="community" class="py-16 px-8 border-b border-[var(--border)]">
      <div class="flex items-start gap-6 mb-12 flex-col md:flex-row">
        <Users class="text-[var(--primary)] flex-shrink-0" size={40} stroke-width={1.5} />
        <div>
          <h2 class="text-[clamp(1.75rem,4vw,2.25rem)] font-bold text-[var(--text)] mb-2">Community & Support</h2>
          <p class="text-lg text-[var(--text-secondary)]">Connect with other schools, share learnings, get help from peers and experts</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {communityResources.map((resource) => (
          <div class="bg-[var(--bg-surface)] p-8 rounded-xl shadow-sm flex flex-col gap-4 transition-all duration-300 hover:shadow-md hover:-translate-y-0.5">
            <div class="flex items-center gap-3">
              <resource.icon class="text-[var(--primary)] flex-shrink-0" size={28} stroke-width={1.5} />
              <h3 class="text-xl font-bold text-[var(--text)] m-0">{resource.title}</h3>
            </div>
            <p class="text-[var(--text-secondary)] leading-relaxed flex-grow">{resource.description}</p>
            <div class="flex gap-4 flex-wrap text-meta text-[var(--text-muted)]">
              <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.type}</span>
              <span class="py-1 px-3 bg-[var(--bg)] rounded-md">{resource.time}</span>
            </div>
            <a
              href={resource.href}
              class="inline-flex items-center justify-center gap-2 py-3 px-6 rounded-xl font-semibold text-body transition-all duration-200 bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg)]"
              {...(resource.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
            >
              {resource.buttonText}
            </a>
          </div>
        ))}
      </div>
    </section>

    <!-- Consultation Services -->
    <section id="consultation" class="py-20 px-8 bg-[var(--bg)]">
      <h2 class="text-[clamp(2rem,5vw,2.5rem)] font-bold text-[var(--text)] mb-4">Consultation & Support Services</h2>
      <p class="text-lg text-[var(--text-secondary)] max-w-[700px] mb-12">
        Need more personalized support? We offer tiered consultation services to match your school's needs and budget.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
        {tiers.map((tier) => (
          <div class={`bg-[var(--bg-surface)] rounded-xl p-10 shadow-sm relative flex flex-col transition-all duration-300 hover:-translate-y-1 hover:shadow-lg ${tier.highlighted ? 'border-2 border-[var(--primary)]' : ''}`}>
            {tier.badge && (
              <div class="absolute -top-3 left-1/2 -translate-x-1/2 bg-[var(--primary)] text-[var(--text)] py-2 px-6 rounded-full text-caption font-semibold">
                {tier.badge}
              </div>
            )}
            <div class="mb-8 pb-8 border-b-2 border-[var(--border)]">
              <h3 class="text-2xl font-bold text-[var(--text)] mb-4">{tier.name}</h3>
              <div class="text-4xl font-bold text-[var(--primary)] mb-2">
                {tier.price}<span class="text-body font-medium text-[var(--text-secondary)]">{tier.period}</span>
              </div>
              <p class="text-body text-[var(--text-secondary)] m-0">{tier.subtitle}</p>
            </div>
            <ul class="list-none p-0 m-0 mb-8 flex-grow">
              {tier.features.map((feature) => (
                <li class="flex items-start gap-3 py-3 text-body">
                  <CircleCheckBig class="text-[var(--success)] flex-shrink-0 mt-0.5" size={20} />
                  <span class="text-[var(--text)]">{feature}</span>
                </li>
              ))}
            </ul>
            <a
              href={tier.href}
              class={`w-full text-center py-3 px-6 rounded-xl font-semibold transition-all duration-200 ${
                tier.variant === 'primary'
                  ? 'bg-[var(--primary)] text-white hover:brightness-110'
                  : 'bg-transparent text-[var(--primary)] border-2 border-[var(--primary)] hover:bg-[var(--bg)]'
              }`}
            >
              {tier.buttonText}
            </a>
          </div>
        ))}
