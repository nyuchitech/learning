---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';
import { FileText, ArrowRight } from '@lucide/astro';

// Blog posts data (latest 3)
const latestPosts = [
  {
    title: 'The Developing World\'s Educational Advantage',
    slug: 'developing-world-educational-advantage',
    date: '2025-11-16',
    excerpt: 'Developing countries can leapfrog outdated models—building digital campuses optimized for the 2050 workplace from day one.',
  },
  {
    title: 'Launching the African Education Digital Framework',
    slug: 'launching-the-framework',
    date: '2025-10-26',
    excerpt: 'A comprehensive blueprint for digital transformation in K-12 schools across Africa.',
  },
  {
    title: 'Why Open-Source Matters for African Schools',
    slug: 'why-open-source',
    date: '2025-10-25',
    excerpt: 'How open-source solutions can save schools 60-80% on infrastructure costs.',
  }
];
---

<BaseLayout
  title="Build Digital Campuses. Prepare Students for 2050."
  description="Open frameworks for building and upgrading digital campuses and digital literacy programs. Guidance for schools across Africa and the developing world to prepare students for a world that doesn't yet exist. Research-driven, mobile-first, 60-80% cost savings."
  keywords="digital campus framework, digital literacy programs, developing countries education, K-12 digital transformation, Africa education technology, mobile-first learning, open education frameworks, 2050 education"
>
  <!-- Hero Section -->
  <section class="bg-[var(--bg)] text-[var(--text)] px-4 sm:px-6 pt-10 sm:pt-16 pb-12 sm:pb-16 relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_30%_20%,rgba(0,176,255,0.06)_0%,transparent_50%),radial-gradient(ellipse_at_80%_80%,rgba(0,71,171,0.04)_0%,transparent_40%)]"></div>
    <div class="max-w-[1100px] mx-auto relative z-10 w-full">
      <p class="text-body-lg mb-4 sm:mb-6 italic text-[var(--text-secondary)] font-medium tracking-widest animate-fade-in">Ubuntu: I am because we are</p>
      <h1 class="font-display text-[clamp(2.5rem,6vw,4.5rem)] font-bold mb-4 sm:mb-6 leading-tight animate-fade-in animation-delay-200">
        Build Digital Campuses. <span class="text-[var(--primary)]">Prepare for 2050.</span>
      </h1>
      <p class="text-body-lg text-[var(--text-secondary)] mb-4 sm:mb-6 max-w-[65ch] font-normal animate-fade-in animation-delay-400">
        Open frameworks for building and upgrading <strong class="text-[var(--text)]">digital campuses</strong> and
        <strong class="text-[var(--text)]">digital literacy programs</strong>. Prepare students for a world that doesn't yet exist—with
        guidance designed for <strong class="text-[var(--text)]">Africa and the developing world</strong>.
      </p>
      <p class="text-meta text-[var(--text-secondary)] font-semibold tracking-wider mb-6 sm:mb-8 animate-fade-in animation-delay-600">
        Research-Driven • Competency-Focused • 60-80% Cost Savings
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 items-start mt-6 sm:mt-8 animate-fade-in animation-delay-800">
        <a href="/frameworks" class="btn-primary shadow-md hover:shadow-lg w-full sm:w-auto">
          Explore Frameworks
        </a>
        <a href="/about" class="btn-secondary w-full sm:w-auto">
          Our Mission
        </a>
      </div>
      <p class="text-meta text-[var(--text-tertiary)] mt-6 sm:mt-8 font-medium animate-fade-in animation-delay-1000">
        Serving schools across Africa • South Asia • Southeast Asia • Latin America • Pacific
      </p>
    </div>
  </section>

  <!-- Value Proposition -->
  <section class="py-12 sm:py-16 md:py-24 px-4 sm:px-6 bg-[var(--bg-surface)]">
    <div class="max-w-[1100px] mx-auto">
      <h2 class="font-display text-[clamp(2rem,4vw,3rem)] font-bold text-[var(--text)] mb-6">Why Digital Campuses for 2050?</h2>
      <p class="text-body-lg text-[var(--text)] mb-6 max-w-[65ch]">
        <strong>How do you prepare students for jobs that don't exist yet?</strong> The answer isn't changing what you teach—it's transforming how students learn and access knowledge.
      </p>
      <p class="text-body text-[var(--text-secondary)] mb-8 max-w-[65ch]">
        Our frameworks help schools build the digital infrastructure and literacy programs that develop adaptable, digitally-fluent learners.
        Open, evidence-based, and designed for schools with limited resources.
      </p>
      <a href="/about" class="inline-flex items-center gap-2 text-[var(--primary)] font-bold hover:gap-4 transition-all duration-300 text-body min-h-[44px]">
        Read our full mission
        <ArrowRight class="w-5 h-5" stroke-width={2} />
      </a>
    </div>
  </section>

  <!-- Available Frameworks -->
  <section class="py-12 sm:py-16 md:py-24 px-4 sm:px-6 bg-[var(--bg)]">
    <div class="max-w-[1100px] mx-auto">
      <h2 class="font-display text-[clamp(2rem,4vw,3rem)] font-bold text-[var(--text)] mb-3 sm:mb-4">Available Frameworks</h2>
      <p class="max-w-[65ch] mb-8 sm:mb-12 text-body text-[var(--text-secondary)]">
        Open, shareable frameworks for K-12 education transformation. Free to copy, adapt, and improve.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
        <div class="bg-[var(--bg-surface)] p-5 sm:p-6 md:p-8 rounded-2xl border border-[var(--border)] hover:-translate-y-1 hover:border-[var(--primary)] transition-all duration-300 flex flex-col gap-4 sm:gap-6">
          <h3 class="text-lg sm:text-xl font-bold text-[var(--primary)]">K-12 Digital Campus</h3>
          <p class="text-body text-[var(--text-secondary)] flex-1">
            Comprehensive blueprint for digital transformation: infrastructure, platforms, digital literacy,
            AI analytics, and 3-year implementation roadmap.
          </p>
          <a href="/framework" class="btn-primary self-start w-full sm:w-auto">
            Explore Framework
          </a>
        </div>
        <div class="bg-[var(--bg-surface)] p-5 sm:p-6 md:p-8 rounded-2xl border border-[var(--border)] hover:-translate-y-1 hover:border-[var(--primary)] transition-all duration-300 flex flex-col gap-4 sm:gap-6">
          <h3 class="text-lg sm:text-xl font-bold text-[var(--primary)]">Digital Literacy</h3>
          <p class="text-body text-[var(--text-secondary)] flex-1">
            Progressive K-12 digital literacy curriculum. From digital citizenship foundations to
            advanced AI collaboration skills for students, staff, and parents.
          </p>
          <a href="/digital-literacy-framework" class="btn-primary self-start w-full sm:w-auto">
            Explore Framework
          </a>
        </div>
        <div class="bg-[var(--bg-surface)] p-5 sm:p-6 md:p-8 rounded-2xl border border-[var(--border)] hover:-translate-y-1 hover:border-[var(--primary)] transition-all duration-300 flex flex-col gap-4 sm:gap-6">
          <h3 class="text-lg sm:text-xl font-bold text-[var(--primary)]">Support Process</h3>
          <p class="text-body text-[var(--text-secondary)] flex-1">
            Three-tier support system: AI chatbot for instant help, EdTech team for educational technology,
            and IT Operations for infrastructure.
          </p>
          <a href="/support-framework" class="btn-primary self-start w-full sm:w-auto">
            Explore Framework
          </a>
        </div>
      </div>
      <div class="mt-8 sm:mt-12">
        <a href="/frameworks" class="btn-secondary w-full sm:w-auto">
          View All Frameworks
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Insights -->
  <section class="py-12 sm:py-16 md:py-24 px-4 sm:px-6 bg-[var(--bg-surface)]">
    <div class="max-w-[1100px] mx-auto">
      <h2 class="font-display text-[clamp(2rem,4vw,3rem)] font-bold text-[var(--text)] mb-3 sm:mb-4">Latest Insights</h2>
      <p class="max-w-[65ch] mb-8 sm:mb-12 text-body text-[var(--text-secondary)]">
        Exploring the future of education, digital transformation strategies, and implementation insights from the field.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
        {latestPosts.map((post) => (
          <article class="bg-[var(--bg)] p-5 sm:p-6 md:p-8 rounded-2xl border border-[var(--border)] hover:-translate-y-1 hover:border-[var(--primary)] transition-all duration-300 flex flex-col gap-4 sm:gap-6">
            <div class="flex justify-between items-center pb-3 sm:pb-4 border-b-2 border-[var(--border)]">
              <FileText class="text-[var(--primary)] w-8 h-8 sm:w-10 sm:h-10" stroke-width={1.5} />
              <div class="text-meta text-[var(--text-tertiary)] font-medium">{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
            </div>
            <h3 class="text-base sm:text-lg font-bold text-[var(--text)] leading-tight">{post.title}</h3>
            <p class="text-body text-[var(--text-secondary)] flex-1">{post.excerpt}</p>
            <a href={`/blog/${post.slug}`} class="inline-flex items-center gap-2 text-[var(--primary)] font-bold hover:gap-4 transition-all duration-300 text-body min-h-[44px]">
              Read Article
              <ArrowRight class="w-4 h-4 sm:w-5 sm:h-5" stroke-width={2} />
            </a>
          </article>
        ))}
      </div>
      <div class="mt-8 sm:mt-12">
        <a href="/blog" class="btn-secondary w-full sm:w-auto">
          View All Insights
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection
    heading="Build the Future. Don't Replicate the Past."
    description="Join schools across Africa, Asia, Latin America, and the Pacific building digital-first learning environments. Access our open, evidence-based frameworks with detailed implementation guides, budget templates, and proven strategies."
    tagline="Free to use, copy, adapt, and share"
  >
    <a href="/frameworks" class="btn-primary shadow-md w-full sm:w-auto">
      Explore All Frameworks
    </a>
    <a href="/consultation" class="btn-secondary w-full sm:w-auto">
      Book a Consultation
    </a>
  </CTASection>
</BaseLayout>
