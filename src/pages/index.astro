  class WaterTrail {
    constructor() {
      this.canvas = document.getElementById('waterTrailCanvas');
      if (!this.canvas) return;

      this.ctx = this.canvas.getContext('2d');
      if (!this.ctx) return;

      this.drops = [];
      this.maxDrops = 50;
      this.dropRadius = 80;

