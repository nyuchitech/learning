---
import { Menu, X } from '@lucide/astro';
import SEO from '../components/SEO.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: 'website' | 'article';
  author?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    section?: string;
    tags?: string[];
    author?: string;
  };
}

const {
  title,
  description = 'Open, shareable framework for digital transformation in K-12 education. Adaptable to any school, community-driven, multilingual support.',
  keywords,
  image,
  type,
  author,
  article
} = Astro.props;
