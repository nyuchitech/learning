---
/**
 * MetricGroup - Container for MetricCard components in a responsive grid.
 *
 * Usage:
 *   <MetricGroup
 *     metrics={[
 *       { value: "50+", label: "Countries Served" },
 *       { value: "4", label: "Continents" },
 *     ]}
 *   />
 *
 *   Or with custom columns:
 *   <MetricGroup metrics={stats} columns={4} />
 */
import MetricCard from './MetricCard.astro';

interface Metric {
  value: string;
  label: string;
}

interface Props {
  metrics: Metric[];
  columns?: 2 | 3 | 4;
}

const { metrics, columns = 3 } = Astro.props;

const colsClass = {
  2: 'sm:grid-cols-2',
  3: 'sm:grid-cols-2 lg:grid-cols-3',
  4: 'sm:grid-cols-2 lg:grid-cols-4',
}[columns];
---

<div class:list={["grid grid-cols-1 gap-4 sm:gap-6 md:gap-8", colsClass]}>
  {metrics.map((metric) => (
    <MetricCard value={metric.value} label={metric.label} />
  ))}
</div>
